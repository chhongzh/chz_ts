{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "lib": [
            "ES6",
            "DOM"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true, // 生成类型声明文件
        "declarationDir": "./dist/types" // 指定类型声明文件的输出目录
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}